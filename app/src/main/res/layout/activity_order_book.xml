<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="DetailBinding">
        <import type="dr.com.coinscreen.dto.OrderBookModel"/>

        <variable
            name="detailModel"
            type="dr.com.coinscreen.dto.OrderBookModel" />
    </data>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderBookActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/korName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trade_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전일대비"/>

        <TextView
            android:id="@+id/per_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/krw_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <!--<TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ask_priceList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DDEBFA"
                    android:stackFromBottom="true"
                    android:layout_centerHorizontal="true"
                    app:reverseLayout="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_priceList"
                    android:layout_toEndOf="@+id/ask_priceList"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/acc_trade_volume_24h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거래량"/>

                    <TextView
                        android:id="@+id/acc_trade_price_24h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거래대금"/>

                    <TextView
                        android:id="@+id/highest_52_week_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52주 최고"/>

                    <TextView
                        android:id="@+id/lowest_52_week_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52주 최저"/>

                    <TextView
                        android:id="@+id/prev_closing_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전일 종가"/>

                    <TextView
                        android:id="@+id/high_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당일 고가"/>

                    <TextView
                        android:id="@+id/low_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당일 저가"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bid_priceList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F6E9E9"
                    android:layout_centerHorizontal="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bid_sizeList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/bid_priceList"
                    android:background="#F6E9E9"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_ask_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="수량"/>

                <TextView
                    android:id="@+id/total_bid_size"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>


</layout>